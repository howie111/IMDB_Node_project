<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">        
        <link rel="stylesheet" href="/styles.css"> 
        <link rel="stylesheet" href="../../public/styles.css">         
    </head>
    <body>
    <header>
    <h1>Movie Detail</h1>
    <div class="backbtn">
    <a href="/"<% %>><i class="fa fa-arrow-circle-o-left" style="font-size:42px; color:white"></i></a>
    </div>
    </header>
        <div class="container">
            <div id="movie-details">
                <h1 class="text-center"><%= movieItem.title %></h1>
                <div class="row">
                    <div class="col-xs-5">
                        <img class="movie-poster" src=<%= movieItem.poster %> />
                    </div>
                    <div class="col-xs-7">
                        <table class="table">
                            <%  for (var i=0;i<Object.keys(movieItem).length;i++){%>
                            <tr>
                                <td><%= Object.keys(movieItem)[i]%></td>
                                <td><%= movieItem[Object.keys(movieItem)[i]]%></td>
                            </tr>
                            <% } %>
                        </table>
                    </div>    
                </div>
            </div>
        </div>
       <footer>      
       </footer> 
    </body>
</html>

